def verificationINT(nb):
    while not nb.isdigit():
        nb = input("Ecrire un nombre correct : ")
    return int(nb)

def index(Tab):  # Added parameter Tab to the index function
    somme = 0
    index1 = input("Choisir un nombre pour le premier index : ")
    index1 = verificationINT(index1)
    
    while index1 >= len(Tab):  # Modified condition to handle equal or greater than
        index1 = input("Choisir un nombre pour le premier index : ")
        index1 = verificationINT(index1)
    
    index2 = input("Choisir un nombre pour le deuxieme index : ")
    index2 = verificationINT(index2)
    
    while index2 >= len(Tab):  # Modified condition to handle equal or greater than
        index2 = input("Choisir un nombre pour le deuxieme index : ")
        index2 = verificationINT(index2)
    
    somme = Tab[index1] + Tab[index2]
    return somme

Tab = []
resultat = 0
nb = input("Ecrire un nombre : ")
nb = verificationINT(nb)

while nb != 0 and resultat <= 100:
    Tab.append(nb)
    resultat += nb
    nb = input("Ecrire un nombre : ")
    nb = verificationINT(nb)

print(index(Tab))